{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-debug",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF"
      }
    },
    {
      "name": "base-release",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base-debug"
    },
    {
      "name": "release",
      "inherits": "base-release"
    },
    {
      "name": "ci-g++-10",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-10",
        "REACTIVE_CPP_COVERAGE": "ON"
      }
    },
    {
      "name": "ci-clang++-12",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++-12"
      }
    },
    {
      "name": "ci-ubsan",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++-12",
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-sanitize-recover=all",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined -fno-sanitize-recover=all"
      }
    },
    {
      "name": "ci-coverage",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-10",
        "REACTIVE_CPP_COVERAGE": "ON"
      }
    },
    {
      "name": "wasm-debug",
      "inherits": "base-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchain/wasm.cmake"
    },
    {
      "name": "wasm-release",
      "inherits": "base-release",
      "toolchainFile": "${sourceDir}/cmake/toolchain/wasm.cmake"
    },
    {
      "name": "wasm-standalone-debug",
      "inherits": "base-debug",
      "toolchainFile": "${sourceDir}/cmake/toolchain/wasm-standalone.cmake"
    },
    {
      "name": "wasm-standalone-release",
      "inherits": "base-release",
      "toolchainFile": "${sourceDir}/cmake/toolchain/wasm-standalone.cmake"
    }
  ]
}
